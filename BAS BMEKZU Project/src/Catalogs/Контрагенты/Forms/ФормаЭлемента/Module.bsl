&НаКлиенте
Процедура ЗаполнитьПоЕГРПОУ(Команда)
	
	пЕДРПОУ = СокрЛП(Объект.КодПоЕДРПОУ);
	Если пЕДРПОУ="" Тогда
		Сообщить(НСтр("ru='Не заполнен код ЕГРПОУ';uk='Не заповнено код ЕДРПОУ'"));
		Возврат;
	Иначе
		Если СтроковыеФункцииКлиентСервер.ТолькоЦифрыВСтроке(пЕДРПОУ) Тогда
			Если Не СтрДлина(пЕДРПОУ) = 8 
				И Не СтрДлина(пЕДРПОУ) = 10 Тогда
				Сообщить(НСтр("ru='Не корректная длина кода контрагента.';uk='Не коректна довжина коду контрагента.'"));
				Возврат;
			КонецЕсли;
		Иначе
			Сообщить(НСтр("ru='Не корректный код контрагента.';uk='Не коректний код контрагента.'"));
			Возврат;
		КонецЕсли;
	КонецЕсли;
	 
	СписокВыбораЗаполнения = Новый СписокЗначений;
	Если Пактум_Сервер.Пактум_Права(Ложь) Тогда
		СписокВыбораЗаполнения.Добавить("Пактум",НСтр("ru='Заполнить из Пактум.Контрагент';uk='Заповнити з Пактум.Контрагент'"));

	КонецЕсли;
	Если ОпендатаботЗаполнениеКонтрагентаСервер.ЕстьПраваИспользованияОпендатаботСервер(Ложь) Тогда
		СписокВыбораЗаполнения.Добавить("Опендатабот",НСтр("ru='Заполнить из Опендатабот.Ризики';uk='Заповнити з Опендатабот.Ризики'"));
	КонецЕсли; 
	
	Если СписокВыбораЗаполнения.Количество() = 1 Тогда
		ЗначениеВыбора = СписокВыбораЗаполнения.Получить(0).Значение;
		Если ЗначениеВыбора = "Опендатабот" Тогда
