	// номер дня с лидирующим нулем
	НомерДня = Формат(День(Дата), "ЧЦ=2; ЧВН=");
	ПреобразоватьЦифрыВБуквы(НомерДня);
	
	Возврат "Д" + НомерДня;	
	
