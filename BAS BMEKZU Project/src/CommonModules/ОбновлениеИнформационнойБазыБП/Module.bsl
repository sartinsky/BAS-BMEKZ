	ОтборПоРегистратору.Установить(Примемник);
	НовыйНаборЗаписей.Прочитать();	
		
	Если НовыйНаборЗаписей.Количество() <> 0 Тогда
		Если Дополнять Тогда
			ТаблицаНовыхЗаписей = НовыйНаборЗаписей.Выгрузить();	
