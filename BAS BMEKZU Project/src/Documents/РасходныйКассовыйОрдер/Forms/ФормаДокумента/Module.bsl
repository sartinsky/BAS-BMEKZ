	Иначе
		Объект.СуммаДокумента = Платеж.СуммаКВыплате;
		Объект.СчетУчетаРасчетовПоЗП = Платеж.СчетУчета;
//++ БУ ЗИК		
//~		Объект.ГруппаУчетаНачислений = Платеж.ГруппаУчетаНачислений;
//-- БУ ЗИК		
	КонецЕсли;
	
