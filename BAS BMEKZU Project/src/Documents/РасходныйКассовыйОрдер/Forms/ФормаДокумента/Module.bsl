		ШаблонПоля = "ВыплатаПаев[%1].Ведомость";
		Поле = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ШаблонПоля, Формат(НомерСтроки - 1, "ЧН=0; ЧГ="));
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения,, Поле, "Объект");
		Платеж = Новый Структура;
		Платеж.Вставить("СчетУчета",     СчетУчета);
		Платеж.Вставить("СуммаКВыплате", 0);
		Возврат Платеж
	ИначеЕсли ТаблицаДокументовОплаты.Количество() = 1 Тогда
		Платеж = Новый Структура;
		Платеж.Вставить("СчетУчета",     ТаблицаДокументовОплаты[0].СчетУчета);
		Платеж.Вставить("СуммаКВыплате", ТаблицаДокументовОплаты[0].СуммаКВыплате);
		Возврат Платеж;
	Иначе
		Возврат Неопределено;
	КонецЕсли;
		
КонецФункции

&НаСервере
Функция СуммаВыплаченногоПаяПайщику(Знач ПлатежнаяВедомость, Знач Контрагент, Знач ДоговорКонтрагента)
	
	Запрос = Новый Запрос;
			
	Если Объект.ВидОперации = Перечисления.ВидыОперацийРКО.ИНАГРО_ДругиеВыплаты Тогда 
		Запрос.Текст = 
		"ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	СУММА(ИНАГРО_НачислениеДругихВыплатТовары.КВыдаче) КАК СуммаКВыплате,
		|	ИНАГРО_НачислениеДругихВыплатТовары.Контрагент,
		|	ИНАГРО_НачислениеДругихВыплатТовары.ДоговорКонтрагента,
		|	МАКСИМУМ(ИНАГРО_НачислениеДругихВыплатТовары.Ссылка.СчетВзаиморасчетов) КАК СчетУчетаРасчетовСКонтрагентом
		|ИЗ
		|	Документ.ИНАГРО_НачислениеДругихВыплат.Товары КАК ИНАГРО_НачислениеДругихВыплатТовары
		|ГДЕ
		|	ИНАГРО_НачислениеДругихВыплатТовары.Контрагент = &Контрагент
		|	И ИНАГРО_НачислениеДругихВыплатТовары.ДоговорКонтрагента = &ДоговорКонтрагента
		|	И ИНАГРО_НачислениеДругихВыплатТовары.Ссылка = &Ведомость
		|
		|СГРУППИРОВАТЬ ПО
		|	ИНАГРО_НачислениеДругихВыплатТовары.Контрагент,
		|	ИНАГРО_НачислениеДругихВыплатТовары.ДоговорКонтрагента"
	Иначе   
		Запрос.Текст = 
		"ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	СУММА(ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.Выплата) КАК СуммаКВыплате,
		|	ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.Контрагент,
		|	ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.ДоговорКонтрагента,
		|	МАКСИМУМ(ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.СчетУчетаРасчетовСКонтрагентом) КАК СчетУчетаРасчетовСКонтрагентом
		|ИЗ
		|	Документ.ИНАГРО_ВедомостьВыплатПайщикам.СписокПайщиков КАК ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков
		|ГДЕ
		|	ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.Контрагент = &Контрагент
		|	И ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.ДоговорКонтрагента = &ДоговорКонтрагента
		|	И ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.Ссылка = &Ведомость
		|	И ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.СпособВыплаты = ЗНАЧЕНИЕ(Перечисление.СпособыВыплатыЗарплаты.ЧерезКассу)
		|
		|СГРУППИРОВАТЬ ПО
		|	ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.Контрагент,
		|	ИНАГРО_ВедомостьВыплатПайщикамСписокПайщиков.ДоговорКонтрагента";
	
	КонецЕсли;	
	
	Запрос.УстановитьПараметр("Ведомость",          ПлатежнаяВедомость);	
	Запрос.УстановитьПараметр("Контрагент",         Контрагент);	
	Запрос.УстановитьПараметр("ДоговорКонтрагента", ДоговорКонтрагента);	
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Если Выборка.Следующий() Тогда
		
		Платеж = Новый Структура;
		Платеж.Вставить("СчетУчета",     Выборка.СчетУчетаРасчетовСКонтрагентом);
		Платеж.Вставить("СуммаКВыплате", Выборка.СуммаКВыплате);
		Возврат Платеж
		
	КонецЕсли;	
	
КонецФункции
