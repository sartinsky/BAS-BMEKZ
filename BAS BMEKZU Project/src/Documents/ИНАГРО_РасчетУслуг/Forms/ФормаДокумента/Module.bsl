	ДокументОбъект = РеквизитФормыВЗначение("Объект");	
	ИНАГРО_Элеватор.СформироватьПодчиненныеДокументы(ДокументОбъект, Отказ); 	
	ЗначениеВРеквизитФормы(ДокументОбъект, "Объект");	

	Элементы.СформированныеДокументы.Обновить();		
	
