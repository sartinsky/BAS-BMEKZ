		НоваяСтрока.Цена         = СтрокаТабличнойЧасти.Цена;
		НоваяСтрока.Сумма        = СтрокаТабличнойЧасти.Сумма;		
		НоваяСтрока.СтавкаНДС    = СтрокаТабличнойЧасти.СтавкаНДС;
		НоваяСтрока.СуммаНДС     = СтрокаТабличнойЧасти.СуммаНДС;
		
