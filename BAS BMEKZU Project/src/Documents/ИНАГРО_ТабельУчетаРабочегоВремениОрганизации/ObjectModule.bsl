	ЗапросТабель.УстановитьПараметр("НачалоПериода", НачалоМесяца(ДатаНачалаПериода));
	ЗапросТабель.УстановитьПараметр("КонецПериода", КонецМесяца(ДатаОкончанияПериода));
	
