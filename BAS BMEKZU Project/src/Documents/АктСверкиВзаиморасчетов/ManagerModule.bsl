	КонецЕсли;	
	
	// Дата документа
	Если (Выборка.ДатаВходящегоДокумента = Неопределено) ИЛИ (СтрНайти(Строка(Выборка.ДатаВходящегоДокумента),"0001"))>0 Тогда
