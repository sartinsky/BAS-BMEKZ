			Строка.ВыплатаГрязными		= Выборка.Сумма ;
			Строка.Копейки	            = тСуммаОкругления;
			Строка.ДатаНачала           = Выборка.ДатаНачала;
			Строка.ВидРасчета           = Выборка.ВидРасчета;

		КонецЦикла;
		
	КонецЦикла;
	
