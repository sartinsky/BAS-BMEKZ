		Если  Объект.СчетКт = ПредопределенноеЗначение("ПланСчетов.Хозрасчетный.Вспомогательный") ИЛИ
			  Объект.СчетКт = ПредопределенноеЗначение("ПланСчетов.Хозрасчетный.НеоплаченныйКапитал") Тогда
			  
			Объект.ПризнаватьЗатратыВНУ = Истина;
			
		КонецЕсли;
		
	КонецЕсли;

