// Заполняет список команд печати.
// 
// Параметры:
//   КомандыПечати - ТаблицаЗначений - состав полей см. в функции УправлениеПечатью.СоздатьКоллекциюКомандПечати
//
Процедура ДобавитьКомандыПечати(КомандыПечати) Экспорт
	
	// Реестр документов
	КомандаПечати = КомандыПечати.Добавить();
	КомандаПечати.Идентификатор = "Реестр";
	КомандаПечати.Представление = НСтр("ru='Реестр документов';uk='Реєстр документів'");
	КомандаПечати.ЗаголовокФормы= НСтр("ru='Реестр документов ""Документы по малоценным активам""';uk='Реєстр документів ""Документи по малоцінних активах""'");
	КомандаПечати.Обработчик    = "УправлениеПечатьюБПКлиент.ВыполнитьКомандуПечатиРеестраДокументов";
	КомандаПечати.СписокФорм    = "ФормаСписка";
	КомандаПечати.Порядок       = 100;
	
КонецПроцедуры

Функция ПолучитьДополнительныеРеквизитыДляРеестра() Экспорт

	Результат = Новый Структура;
	
	ПолеЗапросаИнфо =
		"	ВЫБОР
		|		КОГДА ТИПЗНАЧЕНИЯ(Таб.Ссылка) = ТИП(Документ.ПередачаМалоценныхАктивовВЭксплуатацию)
		|			ТОГДА Таб.ПодразделениеОрганизации
		|		КОГДА ТИПЗНАЧЕНИЯ(Таб.Ссылка) = ТИП(Документ.ПеремещениеМалоценныхАктивовВЭксплуатации)
		|			ТОГДА ВЫРАЗИТЬ(Таб.Ссылка КАК Документ.ПеремещениеМалоценныхАктивовВЭксплуатации).ФизЛицоКуда
		|		КОГДА ТИПЗНАЧЕНИЯ(Таб.Ссылка) = ТИП(Документ.СписаниеМалоценныхАктивовИзЭксплуатации)
		|			ТОГДА Таб.ПодразделениеОрганизации
		|		КОГДА ТИПЗНАЧЕНИЯ(Таб.Ссылка) = ТИП(Документ.ПартияМалоценныхАктивовВЭксплуатации)
		|			ТОГДА Таб.ПодразделениеОрганизации
		|	КОНЕЦ";
	
	Результат.Вставить("Информация",      ПолеЗапросаИнфо);
	
	Возврат Результат;
	
КонецФункции

