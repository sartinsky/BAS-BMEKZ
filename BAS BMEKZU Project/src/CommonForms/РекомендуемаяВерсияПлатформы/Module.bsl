&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	СистемнаяИнформация = Новый СистемнаяИнформация;
	
	Сообщение= Новый Массив;
	Сообщение.Добавить(НСтр("ru='Для работы с программой ';uk='Для роботи з програмою '"));
	Сообщение.Добавить(Новый ФорматированнаяСтрока(НСтр("ru='рекомендуется';uk='рекомендується'"), Новый Шрифт( , , , Истина)));
	Сообщение.Добавить(НСтр("ru=' использовать версию';uk=' використовувати версію'"));
	Сообщение.Добавить(Символы.ПС);
	Сообщение.Добавить(НСтр("ru='платформы не ниже ';uk='платформи не нижче '"));
	Сообщение.Добавить(Новый ФорматированнаяСтрока(Параметры.РекомендуемаяВерсияПлатформы, Новый Шрифт( , , Истина)));
	Сообщение.Добавить(Символы.ПС);
	Сообщение.Добавить(НСтр("ru='Сейчас используется версия ';uk='Зараз використовується версія '"));
	Сообщение.Добавить(СистемнаяИнформация.ВерсияПриложения);
	Сообщение.Добавить(НСтр("ru='.';uk='.'"));
	
	Элементы.Версия.Заголовок = Новый ФорматированнаяСтрока(Сообщение);
	
	Элементы.ТекстСообщения.Заголовок = Параметры.ТекстСообщения;
	
КонецПроцедуры

