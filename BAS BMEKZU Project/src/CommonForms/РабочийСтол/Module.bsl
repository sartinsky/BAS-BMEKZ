		ДополнительныеСвойства.Вставить("КлючВарианта", КлючВарианта);
	КонецЕсли;
	
	ПараметрыОтчета = Новый Структура("РежимРасшифровки, ВидРасшифровки, ПользовательскиеНастройки", Истина, 2, ПользовательскиеНастройки);
	
