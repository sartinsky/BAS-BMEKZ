	СписокПоказателей.Добавить("","КодПоЕДРПОУ");
	СписокПоказателей.Добавить("","ЮридическийАдрес");
	СписокПоказателей.Добавить("","ФактическийАдрес");
	СписокПоказателей.Добавить("","Email");
	СписокПоказателей.Добавить("","Телефон");
	СписокПоказателей.Добавить("","КодКОАТУУ");
	СписокПоказателей.Добавить("","КодКАТОТТГ");
	
	Сведения = РегламентированнаяОтчетностьВызовСервера.ПолучитьСведенияОбОрганизации(Организация, Форма.СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета, СписокПоказателей);
	
	КодЕДРПОУ 		= Сведения.КодПоЕДРПОУ;
	ОргЮрАдрес 	    = Сведения.ЮридическийАдрес;
	ОргАдрес 	    = Сведения.ФактическийАдрес;
	ЕлПочта         = Сведения.Email;
	Телефон  	    = Сведения.Телефон;	
	КодКОАТУУ       = Сведения.КодКОАТУУ;
	КодКАТОТТГ      = СтрЗаменить(Сведения.КодКАТОТТГ, "UA", "");
	
	СписокПоказателей = Новый СписокЗначений;
	СписокПоказателей.Добавить("","ФИОРук");
	СписокПоказателей.Добавить("","ИмяФАМИЛИЯРук");
	СведенияДатаПодписи = РегламентированнаяОтчетностьВызовСервера.ПолучитьСведенияОбОрганизации(Организация, Форма.ДатаПодписи, СписокПоказателей);
	ФИОДиректора      = СведенияДатаПодписи.ФИОРук;
	ФИДиректора       = СведенияДатаПодписи.ИмяФАМИЛИЯРук;
	
	ЗаполнитьПоказательНаСервере("ЕДРПОУ",  		КодЕДРПОУ, 			Форма, "ДолгПоОплате");
	РегламентированнаяОтчетностьКлиентСервер.ПроставитьВКвадратыЗначения(Форма, "ДолгПоОплате", "ЕДРПОУ_",  8, КодЕДРПОУ, Ложь);		
	
	ЗаполнитьПоказательНаСервере("ОргДиректор",  	ФИОДиректора, 		Форма, "ДолгПоОплате");
	ЗаполнитьПоказательНаСервере("ОргДиректорИмя",  ФИДиректора, 		Форма, "ДолгПоОплате");

	ЗаполнитьПоказательНаСервере("ОргЮрАдрес", ОргЮрАдрес, Форма, "ДолгПоОплате");
	
	ЗаполнитьПоказательНаСервере("ОргАдрес", ОргАдрес, Форма, "ДолгПоОплате");
	
	ЗаполнитьПоказательНаСервере("ЕлПочта", ЕлПочта, Форма, "ДолгПоОплате");

	ЗаполнитьПоказательНаСервере("Телефон", Телефон, Форма, "ДолгПоОплате");
	
	ЗаполнитьПоказательНаСервере("ЕлПочта", ЕлПочта, Форма, "ДолгПоОплате");
	Если ЗначениеЗаполнено(КодКАТОТТГ) Тогда
		ЗаполнитьПоказательНаСервере("КАТОТТГ", КодКАТОТТГ, Форма, "ДолгПоОплате");
		ЗаполнитьПоказательНаСервере("КОАТУУ", "", Форма, "ДолгПоОплате");
		КодКОАТУУ = "";
	Иначе	
		ЗаполнитьПоказательНаСервере("КОАТУУ", КодКОАТУУ, Форма, "ДолгПоОплате");
		ЗаполнитьПоказательНаСервере("КАТОТТГ", "", Форма, "ДолгПоОплате");
	КонецЕсли;

	
	ПериодОтчета = "на " + Формат(Форма.СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета+1, "ДФ = 'дд ММММ гггг';Л = uk_UA") + " року";
	
	// приведем название месяца к правильному падежу
	ПериодОтчета = СтрЗаменить(ПериодОтчета, "ень ", "ня ");
	ПериодОтчета = СтрЗаменить(ПериодОтчета, "ий ",  "ого ");
	ПериодОтчета = СтрЗаменить(ПериодОтчета, "пад ", "пада ");
	
	// в нижнем регистре
	ПериодОтчета = НРег(ПериодОтчета);
	
	ЗаполнитьПоказательНаСервере("ПериодОтчета",  ПериодОтчета, Форма, "ДолгПоОплате");
	
	МесяцРасчета = Месяц(СтруктураРеквизитовФормы.мДатаНачалаПериодаОтчета);
	МесяцЗадол = ДобавитьМесяц(СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета,1);
	
	
КонецПроцедуры

