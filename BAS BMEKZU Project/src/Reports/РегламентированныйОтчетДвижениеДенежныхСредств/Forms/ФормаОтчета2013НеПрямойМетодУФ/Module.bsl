	КонецЕсли;
	
	

	// используем метод.рекомендации от 11.04.2013 № 476
	П35703 = ПолучитьПоказательНаСервере("П35003", Форма, "ДДС") 
								 + ПолучитьПоказательНаСервере("П35053", Форма, "ДДС")
