	СчетаДС.Добавить(ПланыСчетов.Хозрасчетный.Касса);
	СчетаДС.Добавить(ПланыСчетов.Хозрасчетный.СчетаВБанках);
	
	ТекстДляСортировкиРасшифровки = "_" + ВидДеятельности;
	
