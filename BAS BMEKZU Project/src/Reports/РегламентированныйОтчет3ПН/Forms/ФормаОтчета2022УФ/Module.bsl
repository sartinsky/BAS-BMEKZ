Процедура ЗаполнитьПоказательНаВсехЗакладках(ИмяПоказателя, Значение, Форма, СписокИсключений = "")

	Если Найти(СписокИсключений, "Уведомление") = 0 Тогда
		ЗаполнитьПоказательНаСервере(ИмяПоказателя, Значение, Форма, "Уведомление");
	КонецЕсли;
	Если Найти(СписокИсключений, "Ведомость") = 0 Тогда
		
		Для каждого ДанныеВ Из Форма.ТаблицаСтраницыРаздела1 Цикл
			Если ДанныеВ.АктивнаяСтраница = Ложь Тогда
				ДанныеВ.Данные[0].Значение.Вставить(ИмяПоказателя, Значение)
			КонецЕсли;	
		КонецЦикла;
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = "Ведомость" Тогда
			Форма.ТабличныйДокумент.Области[ИмяПоказателя].Значение = Значение;
		КонецЕсли;	
		
	КонецЕсли;

