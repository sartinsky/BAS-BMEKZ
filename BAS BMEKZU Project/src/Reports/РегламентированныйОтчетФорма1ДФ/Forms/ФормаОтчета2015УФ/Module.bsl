					Строка["T1RXXXXG05"]  = стр.ДоходНДФЛ;

				КонецЕсли;         
				
			Иначе
				
			КонецЕсли;
			
		КонецЕсли;	
		
		СотрудникПредыдущий = стр.Контрагент;
		Номер = Номер + 1;
		
	КонецЦикла;
	
	СтруктураДанныхФорма1ДФ.R0205G03A = R0205G03A;
	СтруктураДанныхФорма1ДФ.R0205G03  = R0205G03;
