	Иначе
	    ЗаполнитьПоказательНаСервере("HPV",   0, Форма, "Приложение9");
	    ЗаполнитьПоказательНаСервере("R03G3", 0, Форма, "Приложение9");
	    ЗаполнитьПоказательНаСервере("R03G4", 0, Форма, "Приложение9");
	    ЗаполнитьПоказательНаСервере("R03G5", 0, Форма, "Приложение9");
	КонецЕсли;
	
	Если Не СуммаПоСтолбцу6НП = 0 И НовосозданноеПредприятие Тогда
	    ЗаполнитьПоказательНаСервере("HPVN",  100 * СуммаПоСтолбцу3НП / СуммаПоСтолбцу6НП, Форма, "Приложение9");
	    ЗаполнитьПоказательНаСервере("R04G3", 100 * СуммаПоСтолбцу3НП / СуммаПоСтолбцу6НП, Форма, "Приложение9");
