			ДобавленнаяСтрока[ПрефиксИмениКолонки+"G9"] = строка.НДС14;
			
			
			Продолжить;
			
		ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы1_11 И Строка.УслугиНерезид Тогда
			
