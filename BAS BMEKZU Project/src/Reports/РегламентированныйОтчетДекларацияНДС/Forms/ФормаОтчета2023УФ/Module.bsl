	КонецЦикла;
	
	ТаблицаКонтрагентов.Свернуть("ИННКонтрагента,Дата,КассовыйМетод,КонтрагентСпецКода,ОС,УслугиНерезид,Номер", "БазаНДС,НДС,НДС7,НДС14");
