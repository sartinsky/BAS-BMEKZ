	        ДобавленнаяСтрока[ПрефиксИмениКолонки+"G2"] = строка.ИННКонтрагента;
			
			ДобавленнаяСтрока[ПрефиксИмениКолонки+"Kontragent"] = строка.Контрагент;	
			
			Если ЗначениеЗаполнено(строка.Дата) Тогда
				ДобавленнаяСтрока[ПрефиксИмениКолонки+"G31"] = Месяц(строка.Дата);
				ДобавленнаяСтрока[ПрефиксИмениКолонки+"G32"] = Год(строка.Дата);
			КонецЕсли;
			ДобавленнаяСтрока[ПрефиксИмениКолонки+"G4"] = строка.КассовыйМетод;	
			
			ДобавленнаяСтрока[ПрефиксИмениКолонки+"G5"] = строка.ОС;	
