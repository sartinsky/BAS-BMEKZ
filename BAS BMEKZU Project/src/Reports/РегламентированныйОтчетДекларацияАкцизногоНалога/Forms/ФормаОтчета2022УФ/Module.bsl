// РАСЧЕТ()
// Выполняет расчет вычисляемых показателей на заданной странице отчета
// (ячеек, выделенных зеленым цветом). 
// В случае неуказания листа, ничего происходить не будет
// Параметры:
//  ИмяСтраницыПанели - строка, имя страницы основной панели формы.
//
&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяСтраницыПанели = "", ОбластьИмя = "")
	Перем ТаблицаБлока;
	
	Если (Форма.СтруктураРеквизитовФормы.мРежимПечати) Тогда
		Возврат; // служебный вызов в процессе печати
	КонецЕсли;
	
	Если (Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет) Тогда
		Возврат; // отключен режим авторасчета
	КонецЕсли;
	
	// обновим данные многострочных групп
	Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяСтраницыПанели Тогда
		
		ИдГрупп = Новый Массив;
		ИдГрупп.Добавить(Форма.СтруктураРеквизитовФормы.мИдГруппы1);
		ИдГрупп.Добавить(Форма.СтруктураРеквизитовФормы.мИдГруппы6);
		ИдГрупп.Добавить(Форма.СтруктураРеквизитовФормы.мИдГруппы8);
		ИдГрупп.Добавить(Форма.СтруктураРеквизитовФормы.мИдГруппы10);
		
		Для каждого ИмяГруппы Из ИдГрупп Цикл
			РегламентированнаяОтчетностьКлиентСервер.ОбновитьСтруктуруМногострочногоРаздела(Форма, ИмяГруппы);
		КонецЦикла;
		
	КонецЕсли;
	
	ЭтоУточненка = ЗначениеЗаполнено(ПолучитьПоказательНаСервере("HZU", Форма, "ДекларацияАкциз"));	
	
	//////////////////////////
	// расчет приложения 6
	//////////////////////////
	НомСтрЧисло = 0;
	Для каждого Приложение6 Из Форма.D6 Цикл
		НомСтрЧисло = НомСтрЧисло + 1;
		НомСтр = Формат(НомСтрЧисло, "ЧГ=");
		
		Итог = 0;
		Для НомКол = 1 По 5 Цикл
			
			Приложение6["D6R01" + НомКол + "G5"] = Приложение6["D6R01" + НомКол + "G3"] * Приложение6["D6R01" + НомКол + "G4"] / 100;
			
			Итог = Итог + Приложение6["D6R01" + НомКол + "G5"];
			
            ЗаполнитьПоказательНаСервере("D6R01" + НомКол + "G5_" + НомСтр, Приложение6["D6R01" + НомКол + "G5"], Форма, "ДекларацияАкциз");
			
		КонецЦикла;
		
		Приложение6["D6R01G5"] = Итог;
		ЗаполнитьПоказательНаСервере("D6R01G5_" + НомСтр, Итог, Форма, "ДекларацияАкциз");
		
	КонецЦикла;
	ЗаполнитьПоказательНаСервере("R010G1", ?(Форма.D6.Итог("D6R01G5")>0, "Х", ""), Форма, "ДекларацияАкциз");
	ЗаполнитьПоказательНаСервере("R010G2", ?(Форма.D6.Итог("D6R01G5")>0, Форма.D6.Количество(), ""), Форма, "ДекларацияАкциз");
	ЗаполнитьПоказательНаСервере("R010G3", ?(Форма.D6.Итог("D6R01G5")>0, Форма.D6.Количество(), ""), Форма, "ДекларацияАкциз");
	
	//////////////////////////
	// расчет тела декларации
	//////////////////////////
	
	ЗаполнитьПоказательНаСервере("R500100G4",  Форма.D6.Итог("D6R01G5"), Форма, "ДекларацияАкциз");
	
	НомСтрЧисло = 0;
	Для каждого Приложение6 Из Форма.D6 Цикл
		
		НомСтрЧисло = НомСтрЧисло + 1;
		НомСтр = Формат(НомСтрЧисло, "ЧГ=");
		
		Форма.DT1R[НомСтрЧисло - 1].DT1RXXXXG2S = Приложение6.D6HKATOTTG;
		Форма.DT1R[НомСтрЧисло - 1].DT1RXXXXG4  = Приложение6.D6R01G5;
		
		ЗаполнитьПоказательНаСервере("DT1RXXXXG2S_"+ НомСтр , Приложение6.D6HKATOTTG, Форма, "ДекларацияАкциз");
		ЗаполнитьПоказательНаСервере("DT1RXXXXG4_" + НомСтр , Приложение6.D6R01G5, Форма, "ДекларацияАкциз");
		
	КонецЦикла;	
	
	//////////////////////////
	// расчет приложения 8
	//////////////////////////
	НомСтрЧисло = 0;
	HZMP8 = Ложь;
	Для каждого Приложение8 Из Форма.D8 Цикл
		
		НомСтрЧисло = НомСтрЧисло + 1;
		НомСтр = Формат(НомСтрЧисло, "ЧГ=");
		
		Для НомКол = 4 По 11 Цикл
			
			Разница = Приложение8["D8R02G" + НомКол] - Приложение8["D8R01G" + НомКол];
			
			Приложение8["D8R03G" + НомКол] = ?(Разница>0,  Разница, 0);
			Приложение8["D8R04G" + НомКол] = ?(Разница<0, -Разница, 0);
			Приложение8["D8R05G" + НомКол] = ?(   ЭтоУточненка И Разница > 0, Разница * 0.03, 0);
			Приложение8["D8R06G" + НомКол] = ?(НЕ ЭтоУточненка И Разница > 0, Разница * 0.05, 0);
			
			ЗаполнитьПоказательНаСервере("D8R03G" + НомКол+ "_" + НомСтр, Приложение8["D8R03G" + НомКол], Форма, "ДекларацияАкциз");		
			ЗаполнитьПоказательНаСервере("D8R04G" + НомКол+ "_" + НомСтр, Приложение8["D8R04G" + НомКол], Форма, "ДекларацияАкциз");
