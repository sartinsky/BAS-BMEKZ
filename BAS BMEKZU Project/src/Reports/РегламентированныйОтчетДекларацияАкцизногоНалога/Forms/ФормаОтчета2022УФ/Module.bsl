		КонецЦикла;
		Для Сч = 1 По D8.Количество() Цикл
			НомСтр = Формат(Сч, "ЧГ=0");
			Для НомЯчейки = 1 По  10 Цикл
				ТабличныйДокумент.Области["D8" + ИмяЯчейки + НомЯчейки + "_" + НомСтр].Значение = Сред(Значение, НомЯчейки, 1);
			КонецЦикла;
		КонецЦикла;
		
	КонецЕсли;
	
	// заполнение ФИОв руководителей по всем приложениям
	Если    Найти(ИмяЯчейки, "HBOS") > 0 
		ИЛИ Найти(ИмяЯчейки, "HBUH") > 0 Тогда
		
		ЗаполнитьПоказательНаСервере("D"  + ИмяЯчейки, Значение, ЭтаФорма, ДополнительныеПараметры.ИмяСтраницы);
		ЗаполнитьПоказательНаСервере("D1" + ИмяЯчейки, Значение, ЭтаФорма, ДополнительныеПараметры.ИмяСтраницы);
		ЗаполнитьПоказательНаСервере("D10" + ИмяЯчейки, Значение, ЭтаФорма, ДополнительныеПараметры.ИмяСтраницы);
		
		Для Сч = 1 По D6.Количество() Цикл
			НомСтр = Формат(Сч, "ЧГ=0");
			ЗаполнитьПоказательНаСервере("D6" + ИмяЯчейки+ "_" + НомСтр, Значение, ЭтаФорма, ДополнительныеПараметры.ИмяСтраницы);
		КонецЦикла;
		Для Сч = 1 По D8.Количество() Цикл
			НомСтр = Формат(Сч, "ЧГ=0");
			ЗаполнитьПоказательНаСервере("D8" + ИмяЯчейки+ "_" + НомСтр, Значение, ЭтаФорма, ДополнительныеПараметры.ИмяСтраницы);
		КонецЦикла;
		
	КонецЕсли;	
	
	Если ЗначениеЗаполнено(ДополнительныеПараметры.ИмяСтраницыКвадратов) Тогда
		РегламентированнаяОтчетностьКлиентСервер.ПроставитьВКвадратыЗначения(ЭтаФорма, ДополнительныеПараметры.ИмяСтраницыКвадратов, ДополнительныеПараметры.ИмяЯчейкиКвадратов, ДополнительныеПараметры.Размерность, Значение, ДополнительныеПараметры.ДополнитьЗначение, ДополнительныеПараметры.НольКакНоль);
	КонецЕсли;
	
	Расчет(ЭтаФорма);
                         
	СтандартнаяОбработка = Ложь;
	Модифицированность = Истина;

КонецПроцедуры

