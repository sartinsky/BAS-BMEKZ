		Для каждого ДанныеВРазрезеКОАТУУ Из ДанныеВРазрезеНИ.Строки Цикл
			
			НомерПриложения6 = НомерПриложения6 + 1;
			
			// добавляем Приложение 6 по данному КАТОТТГ
			Если НомерПриложения6 > 1 Тогда
				
				СтрокаПрил6 = СтрТаблицыСтраниц.ДанныеДопСтрок[0].Значение.D6.Добавить();
				СтрТаблицыСтраниц.ДанныеДопСтрок[0].Значение.DT1R.Добавить();
				
			Иначе
				
				СтрокаПрил6 = СтрТаблицыСтраниц.ДанныеДопСтрок[0].Значение.D6[0];
				ЭтоПервоеПриложение6 = Ложь;
			
			КонецЕсли;		
			
			Если Не ЗначениеЗаполнено(ДанныеВРазрезеКОАТУУ.КАТОТТГ) И НЕ СообщениеОПустыхЗначенияхВыдавалось Тогда
			
				Сообщить(НСтр("ru='Имются точки продаж подакцизных товаров (склады), для которых не указаны ""Код КАТОТТГ"" или налоговая инспекция!';uk= 'Присутні місця продажу підакцизних товарів (склади), для яких не зазначені ""Код КАТОТТГ"" або податкова інспекція!'"), СтатусСообщения.Важное);	
				СообщениеОПустыхЗначенияхВыдавалось = Истина;
			
			КонецЕсли;			
			
			СтрокаПрил6.D6HKATOTTG = ДанныеВРазрезеКОАТУУ.КАТОТТГ;
			
			ДанныеПоПродажам = ДанныеВРазрезеКОАТУУ.Строки;
			
			// внесем данные в начале для коммерческого использования
			Для каждого СтрокаПродаж Из ДанныеПоПродажам Цикл
				
				ВнестиДанныеВПриложение6(СтрокаПрил6, СтрокаПродаж.СтатьяДекларации, СтрокаПродаж.База);
				
			КонецЦикла;
		
		КонецЦикла;
		
		Если НЕ СтруктураРеквизитовФормы.ПолучениеДанныхДляЗвит1С = Истина Тогда
		
			Сообщить(НСтр("ru='Сформирована декларация в налоговую инспекцию: ';uk= 'Сформована декларація в податкову інспекцію: '") + НалоговаяИнспекция_Наименование + ", код: " + НалоговаяИнспекция.Код + ", район: " + НалоговаяИнспекция.КодАдмРайона, СтатусСообщения.Внимание);
		
		КонецЕсли;
		
	КонецЦикла;
	
